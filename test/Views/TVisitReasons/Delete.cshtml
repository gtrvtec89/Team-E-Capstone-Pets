@model test.TVisitReason

<h2> Remove Visit Reason </h2>
<h3>Are you sure you want to delete this?</h3>
<div>
	<table class="table table-responsive">
		<tr>
			<td>@Html.LabelFor(model => model.strVisitReason, "Visit Reason:")</td>
			<td>@Html.DisplayFor(a => a.strVisitReason)</td>
		</tr>

	</table>
</div>


@using (Html.BeginForm("Delete", "TVisitReasons", FormMethod.Post, new { id = "deleteForm" })) {
	<p>
		@Html.AntiForgeryToken()
		@Html.HiddenFor(a => a.intVisitReasonID)
		<input type="submit" value="Delete" style="background-color:red; color:white" />
	</p>
}
