@model test.TService

@{
    ViewBag.Title = "Delete";
}
@if (Model.TVisitServices.Count > 0)
{
    <div class="body-content">

        <div class="form-horizontal" style="padding-bottom:50px">
            <div class="center" style="text-align:center">
                <h3>Cannot Delete!</h3>
                <p style="margin-left: 25px; font-size:15px">
                    You cannot delete this service because it is in use.
                </p>
                <div>
                    <button class="btn-primary" onclick="location.href='@Url.Action("Index", "TServices")';return false;"><i class="fas fa-arrow-left"></i> Back To List</button>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h2>Services</h2>

    <p style="margin-left: 25px; font-size:15px">

        <button class="btn-primary" onclick="location.href='@Url.Action("Index", "TServices")';return false;"><i class="fas fa-arrow-left"></i> Back To List</button>
        @*@Html.ActionLink("Back to List", "Index")*@
    </p>


    <div class="body-content">
        <div class="form-horizontal" style="padding-bottom:50px">
            <div>
                <h3>Are you sure you want to delete this service?</h3>
                <hr style="margin:5px; margin-bottom: 15px" />
                <dl class="dl-horizontal">

                    <dt>
                        @Html.DisplayName("Description")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.strServiceDesc)
                    </dd>

                    <dt>
                        @Html.DisplayName("Type")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TServiceType.strServiceType)
                    </dd>

                    <dt>
                        @Html.DisplayName("Price")
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.dblPrice)
                    </dd>

                    <dt>
                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn-danger" />
                        <button class="btn-warning" onclick="location.href='@Url.Action("Index", "TServices")';return false;">
                            <i class="fas fa-times"></i>  Cancel
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
}
