@model test.TEmployee

@{
    ViewBag.Title = "Delete";
}

<h2>Employees</h2>

<p style="margin-left: 25px">
    <button class="btn-primary" onclick="location.href='@Url.Action("Index", "TEmployees")';return false;">
        <i class="fas fa-arrow-left"></i>  Back to List
    </button>
</p>

<div class="body-content">
    <div class="form-horizontal" style="padding-bottom:50px">
        <div>
            <h3>Are you sure you want to delete this employee?</h3>
            <hr style="margin:5px; margin-bottom: 15px" />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayName("First Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.strFirstName)
                </dd>

                <dt>
                    @Html.DisplayName("Last Name")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.strLastName)
                </dd>

                <dt>
                    @Html.DisplayName("Job Title")
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TJobTitle.strJobTitleDesc)
                </dd>


               
            </dl>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn-danger" />
                    <button class="btn-warning" onclick="location.href='@Url.Action("Index", "TEmployees")';return false;">
                        <i class="fas fa-times"></i>  Cancel
                    </button>
                </div>
            }
        </div>
    </div>
</div>

