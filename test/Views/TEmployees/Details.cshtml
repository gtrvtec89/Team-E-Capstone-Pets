@model test.TEmployee

@{
    ViewBag.Title = "Details";
}

<h2>Employees</h2>

<div style="display: flex;">
    <p style="margin-left: 25px; font-size:15px">

        <button class="btn-primary" onclick="location.href='@Url.Action("Index", "TEmployees")';return false;"><i class="fas fa-arrow-left"></i> Back To List</button>
    </p>

</div>

<div class="body-content">
    <h4 style="text-decoration: none; padding-top: 10px; padding-left: 10px">
        Employee Details
        <a style="color:#f0ad4e; padding-left: 15px" href='@Url.Action("Edit", "TEmployees", new { id = Model.intEmployeeID })' ;return false;>  <i class="fas fa-pencil-alt"></i></a>
    </h4>

    <div>
        <hr />
        <dl class="d-lg-table">

            <dt>
                @Html.DisplayName("First Name")
            </dt>


            <dd>
                @Html.DisplayFor(model => model.strFirstName)
            </dd>

            <dt>
                @Html.DisplayName("Last Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.strLastName)
            </dd>

            <dt>
                @Html.DisplayName("Job Title")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TJobTitle.strJobTitleDesc)
            </dd>

        </dl>
    </div>
    <p><p>
        <button class="btn-warning" onclick="location.href='@Url.Action("Edit", "TEmployees", new { id = Model.intEmployeeID })';return false;"><i class="fas fa-pencil-alt"></i> Edit</button>
    </p></p>
</div>