@model test.TPet

@{
	ViewBag.Title = "Delete";
}

@if (Model.TVisits.Count > 0) {
<div class="body-content">

	<div class="form-horizontal" style="padding-bottom:50px">
		<div class="center" style="text-align:center">
			<h3>Cannot Delete!</h3>
			<p style="margin-left: 25px; font-size:15px">
				You cannot delete this pet because there are visits assigned to them.
			</p>
			<div>
				<button class="btn-primary" onclick="location.href='@Url.Action("Index", "TPets")';return false;"><i class="fas fa-arrow-left"></i> Back To List</button>
			</div>
		</div>
	</div>
</div> }
else {

<h2>Delete</h2>
<p style="margin-left: 25px; font-size:15px">

	<button class="btn-primary" onclick="location.href='@Url.Action("Index", "TPets")';return false;"><i class="fas fa-arrow-left"></i> Back To List</button>
</p>

<div class="body-content">

	<div class="form-horizontal" style="padding-bottom:50px">
		<div>

			<h3>Are you sure you want to delete this?</h3>

			<hr style="margin:5px; margin-bottom: 15px" />


			<dl style="" class="dl-horizontal">
				@if (Model.TPetImages.Count > 0) {
					<dt>
						Image
					</dt>
					<dd>
						<img src="/TPetImages/getimg?intPetImageID=@Model.TPetImages.First(f => f.strFileType == ".jpg").intPetImageID" alt="avatar" style="max-height:200px; max-width:200px" />
					</dd>
				}
				else {
					<dt>
						Image
					</dt>
					<dd>
						<img src="~/Content/Images/pawprint.jpg" />
					</dd>
				}
				<dt>
					@Html.DisplayName("Pet Name")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.strPetName)
				</dd>


				<dt>
					@Html.DisplayName("Owner")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.TOwner.strFirstName)
					@Html.DisplayFor(model => model.TOwner.strLastName)
				</dd>

				<dt>
					@Html.DisplayName("Tag #")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.strPetNumber)
				</dd>

				<dt>
					@Html.DisplayName("Microchip ID#")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.strMicrochipID)
				</dd>



				<dt>
					@Html.DisplayName("Pet Type")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.TPetType.strPetType)
				</dd>

				<dt>
					@Html.DisplayName("Gender")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.TGender.strGender)
				</dd>

				<dt>
					@Html.DisplayName("Breed")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.TBreed.strBreedName)
				</dd>

				<dt>
					@Html.DisplayName("Birthdate")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.dtmDateofBirth)
				</dd>

				<dt>
					@Html.DisplayName("Weight")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.dblWeight)
				</dd>

				<dt>
					@Html.DisplayName("Blind?")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.isBlind)
				</dd>

				<dt>
					@Html.DisplayName("Deaf?")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.isDeaf)
				</dd>

				<dt>
					@Html.DisplayName("Aggressive?")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.isAggressive)
				</dd>

				<dt>
					@Html.DisplayName("Deceased?")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.isDeceased)
				</dd>

				<dt>
					@Html.DisplayName("Allergies?")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.isAllergic)
				</dd>

				<dt>
					@Html.DisplayName("Color")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.strColor)
				</dd>

				<dt>
					@Html.DisplayName("Notes")
				</dt>

				<dd>
					@Html.DisplayFor(model => model.strNotes)
				</dd>


			</dl>

			@using (Html.BeginForm()) {
				@Html.AntiForgeryToken()

				<div class="form-actions no-color">
					<input type="submit" value="Delete" class="btn-danger" />
					<button class="btn-warning" onclick="location.href='@Url.Action("Index", "TPets")';return false;">
						<i class="fas fa-times"></i>  Cancel
					</button>
				</div>
			}

		</div>
	</div>


</div>
}