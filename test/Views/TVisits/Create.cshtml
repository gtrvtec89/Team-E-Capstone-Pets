@model test.Models.CreateVisit

@{
    ViewBag.Title = "Create";
}

<h2>@ViewBag.PetName</h2>

<p style="margin-left: 25px; font-size:15px">
    <button class="btn-primary" onclick="location.href='@Url.Action("PetVisits", "TVisits", new { id = Session["intPetID"]})';return false;">
        <i class="fas fa-arrow-left"></i>  Back
    </button>
</p>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="body-content">
        <div class="form-horizontal">
            <div class="form-horizontal">
                <hr style="margin:5px; margin-bottom: 15px" />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="flex-container">
                    <p>
                        Pet Name: @ViewBag.PetName
                        <br />
                        ID: @ViewBag.PetID
                        <br />
                        Owner: @ViewBag.OwnerName
                    </p>
                </div>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group row">
                    @Html.LabelFor(model => model.intVisitReasonID,"Visit Reason", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownList("intVisitReasonID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.intVisitReasonID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    @Html.LabelFor(model => model.intEmployeeID, "Doctor", htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-4">
                        @Html.DropDownList("intEmployeeID", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.intEmployeeID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Create" class="btn-success" />
                    </div>
                </div>
            </div>
        </div>
    </div>
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
