@model IEnumerable<test.TVisit>

@{
    ViewBag.Title = "PetVisits";
}

<h2><a>@ViewBag.PetName</a></h2>
<div style="display:flex; flex-wrap:wrap;">
    <p style="margin-left: 25px; font-size:15px">


        <button class="btn-primary" onclick="location.href='@Url.Action("PetProfile", "TPets", new { id =  Session["intPetID"]})';return false;"><i class="fas fa-arrow-left"></i> Profile</button>
    </p>

</div>

<style>
    h2 {
        text-decoration: none;
    }

        h2 > a {
            color: black;
            text-decoration: none;
        }

            h2 > a:hover, a:focus {
                color: cornflowerblue;
                text-decoration: none;
            }

    dt {
        white-space: nowrap
    }

    dd {
        white-space: nowrap
    }

    .topnav {
        overflow: hidden;
        background-color: #333;
        height: 40px;
        max-width: 95%;
        margin: auto;
    }

        .topnav > ul {
            list-style: none;
            padding-inline-start: unset;
        }

            .topnav > ul > li {
                float: left;
                color: #9d9d9d;
                text-align: center;
                padding: 10px 60px;
                text-decoration: none;
                font-size: 15px;
            }

                .topnav > ul > li > a {
                    color: whitesmoke;
                    text-decoration: none;
                }

        .topnav ul li:hover {
            background-color: grey;
            color: black;
        }

        .topnav ul li.active {
            background-color: #6495ed;
            color: white;
        }
</style>

<div class="form-horizontal">
    <div class="topnav">
        <ul>
            <li>@Html.ActionLink("General", "PetProfile", "TPets", new { id = Session["intPetID"] }, null)</li>
            <li class="active">@Html.ActionLink("Visits", "PetProfilePetVisits", new { id = Session["intPetID"] }, null)</li>
            <li>@Html.ActionLink("Vaccinations", "PetProfileVaccinations", "TVaccinations", new { id = Session["intPetID"] }, null)</li>
            <li>@Html.ActionLink("Medications", "PetProfileMedications", "TVisitMedications", new { id = Session["intPetID"] }, null)</li>
        </ul>
    </div>
</div>

<div class="body-content">
    <div class="form-horizontal">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayName("Date")
                </th>
                <th>
                    @Html.DisplayName("Visit Reason")
                </th>
                <th>
                    @Html.DisplayName("View")
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.dtmDateOfVist)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TVisitReason.strVisitReason)
                    </td>
                    <td style="white-space:nowrap">
                        @*<a style="color:#5cb85c; padding-left: 15px" href='@Url.Action("PetProfileVisitDetails", "TVisits", new { id = item.intVisitID })' ;return false;>  <i class="far fa-eye"></i></a>*@

                        <a style="color:dodgerblue; padding-left: 15px" href='@Url.Action("PrintInvoice", "TVisits", new { id = item.intVisitID })' ;return false;>  <i class="far fa-file-pdf"></i></a>
                    </td>
                </tr>
            }
        </table>
    </div>
</div>

