@model test.TVisitMedication

@{
    ViewBag.Title = "PetMedicationDetails";
}

<h2>@ViewBag.Name</h2>

<p style="margin-left: 25px; font-size:15px">
    <button class="btn-primary" onclick="location.href='@Url.Action("PetMedications", "TVisitMedications",  new { id = Session["intPetID"] })';return false;">
        <i class="fas fa-arrow-left"></i>  Pet Medication List
    </button>
</p>
<div class="body-content">
    <div class="form-group">
        <h4 style="text-decoration: none; padding-top: 10px; padding-left: 10px">
            Medication Details
        </h4>
        <hr style="margin:5px; margin-bottom: 15px" />
        <div class="form-group row">
            @Html.LabelFor(model => model.dtmDatePrescribed, "Prescription Date", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.dtmDatePrescribed, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.dtmDatePrescribed, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.intQuantity, "Quantity", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.intQuantity, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.intQuantity, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.TMedication.strMedicationName, "Medication Name", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.TMedication.strMedicationName, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.TMedication.strMedicationName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(model => model.strMedicationNotes, "Notes", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-4">
                @Html.TextAreaFor(model => model.strMedicationNotes, new { htmlAttributes = new { @class = "form-control" }, style = "width:100%; height: 170px;", disabled = "disabled" })
            </div>
        </div>
    </div>
</div>
