@model test.TVisitMedication

@{
    ViewBag.Title = "PetMedicationDetails";
}

<h2>@ViewBag.Name</h2>

<p style="margin-left: 25px; font-size:15px">
    <button class="btn-primary" onclick="location.href='@Url.Action("PetMedications", "TVisitMedications",  new { id = Session["intPetID"] })';return false;">
        <i class="fas fa-arrow-left"></i>  Pet Medication List
    </button>
</p>
<div class="body-content">
    <div class="form-group">
        <h4 style="text-decoration: none; padding-top: 10px; padding-left: 10px">
            Medication Details
        </h4>
        <hr style="margin:5px; margin-bottom: 15px" />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayName("Prescription Date")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.dtmDatePrescribed)
            </dd>

            <dt>
                @Html.DisplayName("Quantity")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.intQuantity)
            </dd>

            <dt>
                @Html.DisplayName("Medication Name")
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TMedication.strMedicationName)
            </dd>

        </dl>
    </div>
</div>
