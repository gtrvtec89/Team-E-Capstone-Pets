@model test.TUser

@{
	Layout = null;
}

@{
	ViewBag.Title = "Login";
}

<style type="text/css">

	body {
		padding-top: 50px;
		padding-bottom: 20px;
		background-image: url(../../Content/Images/wallpaper-1945409.jpg);
		background-size: cover;
		background-color: #fff;
	}

	.body-content {
		padding-left: 15px;
		padding-right: 15px;
		height: auto;
		overflow-y: auto;
		width: auto;
		/*margin: 25px;*/
		align-content: center;
		vertical-align: middle;
		margin: auto;
		display: table;
		border: outset;
		border-width: thick;
		box-sizing: unset;
		padding-top: unset;
		padding-bottom: 15px;
		position: absolute;
		top: 30%;
		left: 43%;
	}

	.btn {
		width: -webkit-fill-available;
		background-color: royalblue;
		border-radius: 25px;
		height: 25px;
		color: white;
	}

	input[type=text], [type=password] {
		width: 100%;
		padding: 12px 20px;
		margin: 8px 0;
		box-sizing: border-box;
	}

	.img {
		height: 50px;
		width: 75px;
		margin-left: 69px;
		margin-bottom: 15px;
	}

	h1 {
		display: block;
		font-size: 2em;
		margin-block-start: 0.70em;
		margin-block-end: 0.67em;
		margin-inline-start: 8px;
		margin-inline-end: 0px;
		font-weight: bold;
	}
</style>

@using (Html.BeginForm("Login", "Home", FormMethod.Post)) {
	@Html.AntiForgeryToken()
	<table border="0" cellpadding="0" cellspacing="0">
		<tr>
			<th colspan="3">
				Login
			</th>
		</tr>
		<tr>
			<td>
				Username
			</td>
			<td>
				@Html.TextBoxFor(m => m.strUserName)
			</td>
			<td>
				@Html.ValidationMessageFor(m => m.strUserName, "", new { @class = "error" })
			</td>
		</tr>
		<tr>
			<td>
				Password
			</td>
			<td>
				@Html.PasswordFor(m => m.strPassword)
			</td>
			<td>
				@Html.ValidationMessageFor(m => m.strPassword, "", new { @class = "error" })
			</td>
		</tr>
		<tr>
			<td>
				Remember Me
			</td>
			<td>
				@Html.CheckBoxFor(m => m.RememberMe)
			</td>
			<td>
			</td>
		</tr>
		<tr>
			<td></td>
			<td>
				<input type="submit" value="Submit" />
			</td>
			<td></td>
		</tr>
	</table>
}
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")
@if (@ViewBag.Message != null) {
	<script type="text/javascript">
            $(function () {
                alert("@ViewBag.Message")
            });
	</script>
}
</body>


