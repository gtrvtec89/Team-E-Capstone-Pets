@model test.TBreed

<h2> Remove Breed </h2>
<h3>Are you sure you want to delete this?</h3>
<div>
	<table class="table table-responsive">
		<tr>
			<td>@Html.LabelFor(model => model.strBreedName, "Breed:")</td>
			<td>@Html.DisplayFor(a => a.strBreedName)</td>
		</tr>

	</table>
</div>


@using (Html.BeginForm("Delete", "TBreeds", FormMethod.Post, new { id = "deleteForm" })) 
{
	<p>
		@Html.AntiForgeryToken()
		@Html.HiddenFor(a => a.intBreedID)
		<input type="submit" value="Delete" style="background-color:red; color:white" />
	</p>
}

